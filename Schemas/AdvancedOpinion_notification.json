{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Generated schema for Advanced Opinion Notification",
  "type": "object",
  "properties": {
    "assessmentSlug": {
      "type": "string"
    },
    "companyId": {
      "type": "string"
    },
    "maxCreditAmount": {
      "type": "object",
      "properties": {
        "currency": {
          "type": "string"
        },
        "value": {
          "type": "number"
        }
      },
      "required": [
        "currency",
        "value"
      ]
    },
    "requestedAmount": {
      "type": "object",
      "properties": {
        "currency": {
          "type": "string"
        },
        "value": {
          "type": "number"
        }
      },
      "required": [
        "currency",
        "value"
      ]
    },
    "decisionStatus": {
      "type": "string"
    },
    "decisionDetails": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "code": {
            "type": "string"
          },
          "descriptions": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "label": {
                  "type": "string"
                },
                "short": {
                  "type": "string"
                },
                "full": {
                  "type": "string"
                },
                "language": {
                  "type": "string"
                }
              },
              "required": [
                "label",
                "short",
                "full",
                "language"
              ]
            }
          }
        },
        "required": [
          "code",
          "descriptions"
        ]
      }
    },
    "releaseDate": {
      "type": "string"
    },
    "isCurrent": {
      "type": "boolean"
    }
  },
  "required": [
    "assessmentSlug",
    "companyId",
    "maxCreditAmount",
    "requestedAmount",
    "decisionStatus",
    "decisionDetails",
    "releaseDate",
    "isCurrent"
  ]
}